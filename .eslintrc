{
  "extends": [
    "stylelint",
    "plugin:flowtype/recommended"
  ],
  "env": {
    "jest": true
  },
  "plugins": [
    "flowtype"
  ],
  "rules": {
    "arrow-spacing": 2,
    "no-var": 2,
    "object-shorthand": 2,
    "prefer-const": 2,
    "sort-imports": 2,
    "template-curly-spacing": 2
  }
}
